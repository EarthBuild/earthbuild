VERSION 0.8

test:
    FROM alpine:3.18
    RUN apk --update add openssh-client
    RUN test -z "$SSH_AUTH_SOCK"
    RUN --ssh test -n "$SSH_AUTH_SOCK" && ssh-add -l | grep 'rsa-key-from-earthly-tests'

test-with-docker:
    FROM earthbuild/dind:alpine-3.22-docker-28.3.3-r2
    RUN apk --update add openssh-client
    WITH DOCKER
        RUN --ssh test -n "$SSH_AUTH_SOCK" && ssh-add -l | grep 'rsa-key-from-earthly-tests'
    END
