VERSION 0.8

IMPORT github.com/EarthBuild/earthbuild-command-example:main
IMPORT github.com/EarthBuild/earthbuild-command-example:import AS command-import
IMPORT github.com/EarthBuild/hello-world:main AS hello-dolly

all:
    BUILD +test-command
    BUILD +test-target
    BUILD +test-command-import

test-command:
    FROM alpine:3.18
    DO earthbuild-command-example+TOUCH --file=foo
    RUN test -f ./foo

test-target:
    FROM hello-dolly+hello

test-command-import:
    DO command-import+FROM_HELLO_WORLD
