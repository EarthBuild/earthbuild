VERSION 0.8
FROM --pass-args ..+base

# replace the earthbuild config.yml (which typically has buildkit_additional_config configured
# to use the earthbuild docker hub registry); we want to intentionally use docker hub for thist test
RUN echo "global:
  disable_analytics: true" > /etc/.earthbuild/config.yml

# clear out any docker auth
RUN rm -f /root/.docker/config.json

test:
    RUN mkdir sub
    COPY hello.earth Earthfile
    DO --pass-args +RUN_earthbuild_ARGS --target=+hello --should_fail=maybe # there's a chance we actually get rate limited
    RUN acbgrep 'Warning: you are not logged into registry-1.docker.io, you may experience rate-limitting when pulling images' earthbuild.output

RUN_earthbuild_ARGS:
    FUNCTION
    ARG earthfile
    ARG target
    ARG should_fail=false
    DO --pass-args ..+RUN_earthbuild \
        --earthfile=$earthfile \
        --target=$target \
        --should_fail=$should_fail
