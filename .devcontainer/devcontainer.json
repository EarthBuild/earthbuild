{
  "name": "Ubuntu",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": true,
      "azureDnsAutoDetection": true,
      "installDockerBuildx": true,
      "version": "latest",
      "dockerDashComposeVersion": "v2"
    }
  },
  // Earthbuild does best with a fair amount of storage for caching
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "64gb"
  },
  "portsAttributes": {
    "8371": {
      "label": "earthbuild BuildKit",
      "onAutoForward": "ignore"
    },
    "8373": {
      "label": "earthbuild BuildKit",
      "onAutoForward": "ignore"
    }
  }
}
