VERSION --git-author-email-name-args 0.8

# Note: this is tests both locally and remotely
# the population of git metadata occurs in two **different** functions respectively:
#   - gitutil/detectgit.go: Metadata            (locally-reference)
#   - buildcontext/git.go: resolveGitProject    (remotely-referenced)

test-git-metadata:
    FROM alpine
    ARG --required expected_sha
    ARG --required expected_committer_timestamp
    ARG --required expected_author_timestamp
    ARG --required expected_branch
    ARG --required expected_refs
    ARG flag_on=true
    LET expected_author="onlyspammersemailthis@earthbuild.dev"
    LET expected_author_email=""
    LET expected_author_name=""
    IF [ "$flag_on" = "true" ]
        SET expected_author="test name <onlyspammersemailthis@earthbuild.dev>"
        SET expected_author_email="onlyspammersemailthis@earthbuild.dev"
        SET expected_author_name="test name"
    END

    ARG EARTHBUILD_GIT_SHORT_HASH
    ARG EARTHLY_GIT_HASH
    ARG EARTHBUILD_GIT_AUTHOR
    ARG EARTHBUILD_GIT_AUTHOR_EMAIL
    ARG EARTHBUILD_GIT_AUTHOR_NAME
    ARG EARTHBUILD_GIT_CO_AUTHORS
    ARG EARTHBUILD_GIT_COMMIT_TIMESTAMP
    ARG EARTHBUILD_GIT_COMMIT_AUTHOR_TIMESTAMP
    ARG EARTHBUILD_GIT_BRANCH
    ARG EARTHBUILD_GIT_REFS
    RUN test "$EARTHLY_GIT_HASH" = "$expected_sha"
    RUN test "$EARTHBUILD_GIT_COMMIT_TIMESTAMP" = "$expected_committer_timestamp"
    RUN test "$EARTHBUILD_GIT_COMMIT_AUTHOR_TIMESTAMP" = "$expected_author_timestamp"
    RUN test "$EARTHBUILD_GIT_BRANCH" = "$expected_branch"
    RUN test "$EARTHBUILD_GIT_REFS" = "$expected_refs"
    RUN test -n "$EARTHBUILD_GIT_SHORT_HASH"
    RUN echo "$EARTHLY_GIT_HASH" | grep "$EARTHBUILD_GIT_SHORT_HASH"
    RUN test "$EARTHBUILD_GIT_AUTHOR" = "$expected_author"
    RUN test "$EARTHBUILD_GIT_AUTHOR_EMAIL" = "$expected_author_email"
    RUN test "$EARTHBUILD_GIT_AUTHOR_NAME" = "$expected_author_name"
    RUN test "$EARTHBUILD_GIT_CO_AUTHORS" = "testy@earthbuild.dev cover@earthbuild.dev"
